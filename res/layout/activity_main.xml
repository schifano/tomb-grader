<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

 
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Course: IT 226"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp" >

        

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:padding="5dip" >
           
            <!--  Column: Category  -->
            <TextView 
                android:id="@+id/category"
                android:text="Category"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dip" 
                android:gravity="center_horizontal">
            </TextView>
            
            <!--  Column: Performance -->
            <TextView 
                android:id="@+id/performance"
                android:text="Performance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dip" 
                android:gravity="center_horizontal">
            </TextView>
		</TableRow>

      	<TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
      	    <FrameLayout 
      	        android:layout_width="wrap_content"
      	        android:layout_height="wrap_content" >
            	<!--  Button: Exam -->
                <Button
		        android:id="@+id/exams"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="26dp"
		        android:text="Exams" 
		        android:onClick="loadCourseDetailScreen"
		        />
               
            </FrameLayout>
            
      	   <TextView 
                android:id="@+id/course_performance"
                android:text="0.0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dip" 
                android:gravity="center_horizontal">
            </TextView>
                
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
               
           <FrameLayout 
      	        android:layout_width="wrap_content"
      	        android:layout_height="wrap_content" >
                
            	<!--  Button: Individual Assignments -->
                <Button
		        android:id="@+id/individual_assignments"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="26dp"
		        android:text="Individual Assignments"
		        android:onClick="loadCourseDetailScreen" />
                
			</FrameLayout>
			
			<!-- <TextView 
                android:id="@+id/individual_assignments_perf"
                android:text="0.0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dip" 
                android:gravity="center_horizontal">
            </TextView> -->
                
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
                
           <FrameLayout 
      	        android:layout_width="wrap_content"
      	        android:layout_height="wrap_content" >            
                <!--  Button: Group Projects -->
                <Button
		        android:id="@+id/group_projects"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="26dp"
		        android:text="Group Projects" 
		        android:onClick="loadCourseDetailScreen" />
		</FrameLayout>
			
			<!--  <TextView 
                android:id="@+id/group_projects_perf"
                android:text="0.0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dip" 
                android:gravity="center_horizontal">
            </TextView> -->
           
        </TableRow>
        
        
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <FrameLayout 
      	        android:layout_width="wrap_content"
      	        android:layout_height="wrap_content" >
            	<!--  Button: Homework Quizzes Participation -->
                <Button
		        android:id="@+id/hw_quizzes_participation"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="26dp"
		        android:text="Homework Quizzes Participation" 
		        android:onClick="loadCourseDetailScreen" />  
          	</FrameLayout>
          	
			<!--  <TextView 
                android:id="@+id/hw_quizzes_participation_perf"
                android:text="0.0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dip" 
                android:gravity="center_horizontal">
            </TextView> -->

        </TableRow>  
    </TableLayout>

</RelativeLayout>